<com.trinity.sample.view.PasteWithTextView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.trinity.sample.text.AutoResizingTextView
        android:id="@android:id/content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:contentDescription="@null"
        android:duplicateParentState="true"
        android:minWidth="30dp"
        android:minHeight="30dp"
        app:strokeColor="#FFff0000"
        app:strokeJoinStyle="miter"
        app:strokeWidth="1dp"
        android:background="@drawable/overlay_content_frame_selector" />

    <ImageView
        android:id="@id/overlay_cancel"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:contentDescription="@null"
        android:duplicateParentState="true"
        android:layout_gravity="left|top"
        android:padding="10dp"
        android:src="@drawable/overlay_cancel_selector"/>

    <ImageView
        android:id="@id/overlay_transform"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:contentDescription="@null"
        android:duplicateParentState="true"
        android:layout_gravity="right|bottom"
        android:padding="10dp"
        android:src="@drawable/overlay_transform_selector"/>

</com.trinity.sample.view.PasteWithTextView>