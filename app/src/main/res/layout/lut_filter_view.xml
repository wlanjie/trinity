<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/alivc_chooser_pager_bg"
    android:orientation="vertical">
    <TextView
        android:id="@+id/effect_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/alivc_svideo_effect_title_height"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:textColor="@color/white"
        android:drawablePadding="7dp" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/alivc_line_gray_light"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/effect_list_filter"
        android:layout_width="match_parent"
        android:overScrollMode="never"
        android:layout_height="@dimen/effect_list_view_size"/>
    <RelativeLayout
        android:id="@+id/effect_list_dismiss"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bottom_editor_tab_height"
        android:background="@color/tab_bg_color"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:gravity="center_vertical"
        android:visibility="gone"
        >
    </RelativeLayout>
</LinearLayout>